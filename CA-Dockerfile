# Use a base image with Python2222
FROM python:3.9-slim

# Set the working directory
WORKDIR /app

# Copy the requirements file and install dependencies
COPY requirements.txt .
RUN pip install -r requirements.txt

# Copy the fetch_events.py script into the container
COPY fetch_events.py .

# Copy the map_events.py script into the container
#COPY map_events.py .

# Command to run the fetch_events.py script
CMD ["python", "fetch_events.py"]
